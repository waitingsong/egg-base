{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true, 
    "target": "ES2018",
    "types" : ["node"]
  },
  "include": [
    "*.ts",
    "app/**/*",
    "config/**/*",
    "test/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "app/public",
    "app/views",
    "node_modules*",
    "test"
  ]
}
